<main>
  <!-- Header Start -->
  <div class="jumbotron jumbotron-fluid mb-5">
    <div class="container text-center py-5">
      <h1 class="text-white display-3">Contact</h1>
      <div class="d-inline-flex align-items-center text-white">
        <p class="m-0"><a class="text-white" href="/">Home</a></p>
        <i class="fa fa-circle px-3"></i>
        <p class="m-0">Contact</p>
      </div>
    </div>
  </div>
  <!-- Header End -->

  <!-- Contact Start -->
  <div class="container-fluid py-5 px-1">
    <div class="container">
      <div class="row">
        <div class="col-lg-5 pb-4 pb-lg-0">
          <div class="bg-primary text-dark text-center p-4">
            <h4 class="m-0">
              <i class="fa fa-map-marker-alt text-white mr-2"></i>7th Floor,
              Amani Place, Ohio Street, Dar es Salaam
            </h4>
          </div>
          <iframe
            style="width: 100%; height: 470px;"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3961.9526118233576!2d39.28649377410071!3d-6.784478093241908!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x185c4c1d2311f0bd%3A0x31c31f9a8bf87c13!2sAmani%20Place%2C%20Ohio%20St%2C%20Dar%20es%20Salaam%2C%20Tanzania!5e0!3m2!1sen!2sus!4v1648129562297!5m2!1sen!2sus"
            frameborder="0"
            style="border:0;"
            allowfullscreen=""
            aria-hidden="false"
            tabindex="0"></iframe>
        </div>
        <div class="col-lg-7">
          <h6 class="text-primary text-uppercase font-weight-bold">
            Contact Us
          </h6>
          <h1 class="mb-4">Contact For Any Queries</h1>
          <div class="contact-form bg-secondary" style="padding: 30px;">
            <div id="success"></div>
            <form name="sentMessage" id="contactForm" novalidate="novalidate">
              <div class="control-group">
                <input
                  type="text"
                  class="form-control border-0 p-4"
                  id="name"
                  placeholder="Your Name"
                  required="required"
                  data-validation-required-message="Please enter your name"
                />
                <p class="help-block text-danger"></p>
              </div>
              <div class="control-group">
                <input
                  type="email"
                  class="form-control border-0 p-4"
                  id="email"
                  placeholder="Your Email"
                  required="required"
                  data-validation-required-message="Please enter your email"
                />
                <p class="help-block text-danger"></p>
              </div>
              <div class="control-group">
                <input
                  type="text"
                  class="form-control border-0 p-4"
                  id="subject"
                  placeholder="Subject"
                  required="required"
                  data-validation-required-message="Please enter a subject"
                />
                <p class="help-block text-danger"></p>
              </div>
              <div class="control-group">
                <textarea
                  class="form-control border-0 py-3 px-4"
                  rows="3"
                  id="message"
                  placeholder="Message"
                  required="required"
                  data-validation-required-message="Please enter your message"
                ></textarea>
                <p class="help-block text-danger"></p>
              </div>
              <div>
                <button
                  class="btn btn-primary py-3 px-4"
                  type="submit"
                  id="sendMessageButton">Send Message</button
                >
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Contact End -->

  <!-- Additional Contact Info -->
  <div class="container-fluid py-5 px-1 bg-secondary">
